@model List<Bloggie.Web.Models.Domain.Tag> // Here I am keeping in List because I am getting tags here as a List.



<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Show All Tag </h1>
    </div>
</div>

@* We need to use model biniding to display tags *@
<div class="container py-8">
    @if(Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th> Actions </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td> @tag.Name</td>
                        <td> @tag.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminTags" asp-action="Edit"
                            asp-route-id="@tag.Id"> Edit </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No tags found !</p>
    }
</div>